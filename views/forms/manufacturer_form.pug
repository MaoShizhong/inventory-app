extends ../layout

block content
    h2(class="my-4 text-2xl font-bold text-center")= formTitle
    form(method="POST" action="" class="w-[min(85vw,800px)] mx-auto")
        div(class="flex flex-col gap-4 mx-auto")
            label(class="flex flex-col") Name:
                input(type="text" placeholder="Name" name="name" value=(manufacturer && manufacturer.name) class="p-1 border rounded-md border-slate-600")
        div(class="flex justify-between my-4")
            button(type="button" class="px-2 py-1 border rounded-md border-slate-600"): a(href=(manufacturer ? manufacturer.url : "/inventory/manufacturers")) Cancel
            button(type="submit" class="px-2 py-1 border rounded-md border-slate-600") Submit

    if errors
        ul(class="text-center")
            for error in errors
                li= error.msg
